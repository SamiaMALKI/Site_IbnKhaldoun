{% extends '::admin.html.twig' %}
{% block body %}

    <table style="margin-top: 36px;">
    <tr>
        <th>Commentaires</th>
        <th>Article</th>

    </tr>




    {% for commentaire in listcommentaire %}
    <tr>

        <td> {{commentaire.contenu}}</td>
        <td><a target="_blank" href="{{ path('public_readarticle', {'id': commentaire.idArticle}) }}"> {{commentaire.article}}</a></td>
        <td><a href="{{ path('admin_validate_com', {'id': commentaire.id}) }}">
                Valider
            </a></td>
        <td><a href="{{ path('admin_delete_com', {'id': commentaire.id}) }}">
                Supprimer
            </a></td>

    </tr>
    {% endfor %}

    </table>

    

    <style type="text/css">
        table {
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid black;
        }
    </style>

{% endblock body %}